{
  "name": "@doist/twist-cli",
  "version": "0.1.0",
  "description": "TypeScript CLI for Twist",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tw": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "twist",
    "cli",
    "messaging",
    "doist"
  ],
  "author": "Ernesto Garc√≠a <ernesto@ernesto.dev>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@doist/twist-sdk": "1.0.3",
    "chalk": "5.6.2",
    "commander": "14.0.2"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "lefthook": "1.10.10",
    "prettier": "3.4.2",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
