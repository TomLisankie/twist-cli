{
    "name": "@doist/twist-cli",
    "version": "0.1.0",
    "description": "TypeScript CLI for Twist",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "tw": "dist/index.js"
    },
    "scripts": {
        "build": "tsc && chmod +x dist/index.js",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "type-check": "tsc --noEmit",
        "lint": "biome check --write .",
        "lint:check": "biome check .",
        "format": "biome format --write . && prettier --write '**/*.{md,yml,yaml,css}'",
        "format:check": "biome check --formatter-enabled=true . && prettier --check '**/*.{md,yml,yaml,css}'",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "twist",
        "cli",
        "messaging",
        "doist"
    ],
    "author": "Ernesto Garc√≠a <ernesto@ernesto.dev>",
    "license": "MIT",
    "engines": {
        "node": ">=20"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Doist/twist-cli.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "homepage": "https://github.com/Doist/twist-cli#readme",
    "bugs": {
        "url": "https://github.com/Doist/twist-cli/issues"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@doist/twist-sdk": "1.0.3",
        "chalk": "5.6.2",
        "commander": "14.0.2",
        "marked": "15.0.12",
        "marked-terminal": "7.3.0",
        "open": "^10.0.0",
        "yocto-spinner": "1.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.9",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/exec": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/github": "8.1.0",
        "@semantic-release/npm": "10.0.6",
        "@semantic-release/release-notes-generator": "11.0.7",
        "@types/node": "25.0.3",
        "lefthook": "1.10.10",
        "prettier": "3.4.2",
        "semantic-release": "21.1.2",
        "typescript": "5.9.3",
        "vitest": "4.0.16"
    }
}
